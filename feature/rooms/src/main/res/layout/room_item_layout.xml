<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_card_bg"
    android:orientation="vertical"
    android:padding="16dp">

    <include
        android:id="@+id/image_carousel"
        layout="@layout/image_carousel"
        android:layout_width="match_parent"
        android:layout_height="257dp" />

    <TextView
        android:id="@+id/hotel_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:textAppearance="@style/RegularText22"
        tools:text="Hotel name" />

    <com.zhigaras.uikit.PeculiaritiesChipGroup
        android:id="@+id/peculiarities_chip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/room_details_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/room_details_button_bg"
        android:drawableEnd="@drawable/arrow_forward"
        android:drawableTint="@color/blue"
        android:paddingVertical="2.5dp"
        android:paddingStart="10dp"
        android:paddingEnd="2dp"
        android:text="@string/room_details"
        android:textAppearance="@style/RegularText16"
        android:textColor="@color/blue" />

    <include
        android:id="@+id/price_view"
        layout="@layout/price_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/to_booking_button"
        style="@style/CommonButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_room" />

</LinearLayout>