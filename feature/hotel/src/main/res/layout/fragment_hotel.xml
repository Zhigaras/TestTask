<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/hotel"
                android:textAppearance="@style/RegularText18" />

            <com.zhigaras.uikit.RatingView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rating_view_bg"
                android:drawableStart="@drawable/baseline_star_24"
                android:drawableTint="@color/yellow"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textAppearance="@style/RegularText16"
                android:textColor="@color/yellow" />


        </LinearLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        style="@style/CommonButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:text="@string/choose_room" />

</LinearLayout>