<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_card_bg"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/hotel"
        android:textAppearance="@style/RegularText18"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/image_carousel"
        layout="@layout/image_carousel"
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <include
        android:id="@+id/hotel_info"
        layout="@layout/hotel_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_carousel" />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/RegularText30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hotel_info"
        tools:text="123 134 P" />

    <TextView
        android:id="@+id/price_unit_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/PriceUnitText"
        app:layout_constraintBaseline_toBaselineOf="@id/price_text_view"
        app:layout_constraintStart_toEndOf="@id/price_text_view"
        tools:text="за путевку" />

</androidx.constraintlayout.widget.ConstraintLayout>