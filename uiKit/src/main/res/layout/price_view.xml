<?xml version="1.0" encoding="utf-8"?>
<com.zhigaras.uikit.PriceView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/RegularText30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="123 134 P" />

    <TextView
        android:id="@+id/price_unit_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/PriceUnitText"
        app:layout_constraintBaseline_toBaselineOf="@id/price_text_view"
        app:layout_constraintStart_toEndOf="@id/price_text_view"
        tools:text="за путевку" />

</com.zhigaras.uikit.PriceView>