<?xml version="1.0" encoding="utf-8"?>
<com.zhigaras.uikit.ImageCarousel xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="15dp">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="8dp"
        android:background="@drawable/tab_layout_bg"
        app:tabBackground="@drawable/tab_indicator_inactive"
        app:tabIndicator="@drawable/tab_indicator_active"
        app:tabIndicatorColor="@color/black"
        app:tabIndicatorGravity="stretch"
        app:tabMaxWidth="15dp" />

</com.zhigaras.uikit.ImageCarousel>